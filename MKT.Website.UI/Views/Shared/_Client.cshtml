<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    <meta name="description" content="Tech Nexus Technology Solutions - Your Tech partner in Abu Dhabi">
    <meta name="author" content="Tech Nexus">
    <meta name="robots" content="max-snippet:20, max-image-preview:large">

</head>
<body >

    <div id="preloader">
        <div data-loader="circle-side"></div>
    </div><!-- /Preload -->

    <div>
        <div class="background-image" data-background="url(/img/betler/main_bg_2.jpg)">
            <div class="min-vh-100 d-flex flex-column opacity-mask" data-opacity-mask="rgba(0, 84, 166, 0.6)">

                @RenderBody()

                <div id="map" style="width:100%;height:400px"></div>

            </div>
        </div>
    </div>



    <!-- Google Maps -->

    <script src="~/js/map.js"></script>
    <script async
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA_zOsSF89_TDKfYKTkbEkoKGVEu9fmGH4&libraries=places&callback=initMap">
    </script>

</body>
</html>
